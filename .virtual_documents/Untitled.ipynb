import streamlit as st
import pandas as pd
import plotly.express as px

# Load data
df = pd.read_csv("netflix_titles.csv")

st.title("Netflix Content Analysis")

# Sidebar filter
content_type = st.sidebar.selectbox(
    "Select Content Type",
    df['type'].unique()
)

filtered_df = df[df['type'] == content_type]

# Chart
year_counts = (
    filtered_df.groupby('release_year')
    .size()
    .reset_index(name='Count')
)

fig = px.line(
    year_counts,
    x='release_year',
    y='Count',
    title=f"{content_type} Released Over Years"
)

st.plotly_chart(fig)



streamlit run app.py




